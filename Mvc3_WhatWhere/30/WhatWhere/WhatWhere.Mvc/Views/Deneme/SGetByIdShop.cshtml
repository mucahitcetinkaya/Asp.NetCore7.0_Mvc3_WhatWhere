@model Shop

<div class="container">
    <div class="row row-cols-1 row-cols-md-6">

        <div class="col mb-4">
            <div class="card">
                <img src="~/images/shop/@Model.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column justify-content-between" style="height: 200px;">
                    <h6 class="card-title">@Model.Name</h6>
                    <h6 class="card-title">@Model.PhoneNumber</h6>
                    <h6 class="card-title">@Model.Address</h6>
                    <div class="d-flex justify-content-between">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
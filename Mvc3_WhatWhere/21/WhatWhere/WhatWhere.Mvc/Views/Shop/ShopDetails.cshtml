                    <div class="col-12 text-center">
                        <p class="text-success mb-2 mt-2 fw-bold">300 TL üzeri kargo bedava!</p>
                    </div>
                </div>
            </div>*@
            @*Patron Bilgileri*@
            <div>
                <h3 class="bg-warning p-2 fs-6 text-white fw-bold display-6 mt-3">@Model.Boss.FirstName + @Model.Boss.LastName</h3>
                <img class="float-end me-1" src="https://picsum.photos/100/100" />
                <p class="fs-6">@Html.Raw(Model.Name)</p>

            </div>
        </div>
    </div>
</div>

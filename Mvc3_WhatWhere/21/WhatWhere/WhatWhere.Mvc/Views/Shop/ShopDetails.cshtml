@model ShopDetailsViewModel

<div class="container pt-4">
    <div class="row">
        <div class="col-3">
            <div class="row">
                <div class="col-12 pb-3">
                    <img class="w-100" src="/images/shop/@Model.ImageUrl" />
                </div>
            </div>
        </div>
        <div class="col-5 bg-light p-3">
            <h3 class="display-6 fs-4 fw-normal text-danger">@Model.Name</h3>
            <a asp-area=""
               asp-controller="Home"
               asp-action="Index"
               asp-route-url="@Model.Name"
               class="display-6 fs-6 fw-normal text-primary">
                @Model.Name
            </a>

            <div class="mt-3">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="fa-regular fa-star text-success fa-xs"></i>
                }
            </div>
            @*Dükkan Ayrıntıları*@
            <div class="mt-3">
                <h3 class="display-6 fs-4 fw-normal text-danger mt-2">Dükkan Ayrıntıları</h3>
                <h6 class="d-inline">Kategori:</h6>
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    <span class="fs-6 text-warning">@Model.Categories[i].Name @(i == Model.Categories.Count - 1 ? "" : ",")</span>
                }
                <div class="row mt-3">
                    <div class="col-6">
                        <div>
                            <h6 class="d-inline">Basım Yılı:</h6>
                            <span class="fs-6">@Model.Name</span>
                        </div>
                        <div>
                            <h6 class="d-inline">Baskı Numarası:</h6>
                            <span class="fs-6">@Model.Address</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <h6 class="d-inline">Sayfa Sayısı:</h6>
                            <span class="fs-6">@Model.Categories</span>
                        </div>
                        <div>
                            <h6 class="d-inline">Stok Miktarı:</h6>
                            <span class="fs-6">@Model.PhoneNumber</span>
                        </div>
                    </div>
                </div>
            </div>
            @*Dükkan Özeti*@
            <h3 class="display-6 fs-4 fw-normal text-danger mt-3">Dükkan Özeti</h3>
            <p class="fs-6">@Html.Raw(Model.Description)</p>
        </div>
        <div class="col-4">
            @*Fiyat Bölümü*@

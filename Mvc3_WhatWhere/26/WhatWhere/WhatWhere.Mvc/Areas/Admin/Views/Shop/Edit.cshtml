@model ShopEditViewModel

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-lg mt-3">
            <div class="card-header"><h3 class="font-weight-light mb-2">Shop Güncelleme</h3></div>
            <div class="card-body">
                <form asp-area="Admin"
                      asp-controller="Shop"
                      asp-action="Edit"
                      method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-floating mb-2 mb-md-0">
                                <input asp-for="Name" class="form-control" type="text" placeholder="Kategori adını giriniz.." />
                                <label for="inputFirstName">Dükkan Adı</label>
                            </div>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="col-md-8">
                            <div class="form-floating">
                                <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="Telefon giriniz..." />
                                <label for="inputLastName">Telefon</label>
                            </div>
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="col-md-8">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Address" type="text" placeholder="Adres giriniz..." />
                                <label for="inputLastName">Adres</label>
                            </div>
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsActive" type="checkbox">
                        <label class="form-check-label" for="IsActive">
                            Aktif mi?
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsDeleted" type="checkbox">
                        <label class="form-check-label" for="IsDeleted">
                            Silinsin mi?
                        </label>
                    </div>
                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Değişklikleri Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    <a asp-area="Admin"
                       asp-controller="Shop"
                       asp-action="Index">
                        Tüm Dükkanları Listele
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<body class="bg-light d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mb-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Şifre Sıfırlama</h2>
                    </div>
                    <div class="card-body">
                        <form asp-area="" asp-controller="Account" asp-action="ForgotPassword" method="post">
                            <div class="mb-3">
                                <label class="form-label">Email adresinizi giriniz:</label>
                                <input class="form-control" name="email" />
                                <span class="text-danger">@ViewBag.EmailErrorMessage</span>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">Linki gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
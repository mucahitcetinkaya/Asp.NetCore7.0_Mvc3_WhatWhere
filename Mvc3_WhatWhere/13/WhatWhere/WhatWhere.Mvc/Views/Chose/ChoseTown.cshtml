@model TownViewModel

<form asp-action="ChoseCategory" method="post">
    <input name="townId" value="" hidden />
    <div class="mb-3">
        <label class="form-label">İlçe Seçin</label>
        <select class="form-select" aria-label="Default select example" name="townId">
            <option selected>İlçeler</option>
            @foreach (var town in Model.Towns)
            {
                <option value="@town.Id">@town.Ilce</option>
            }
        </select>
    </div>
    <button class="btn btn-danger" type="submit">
        <a asp-controller="Shop" asp-action="Index">İlçe Seçtim</a>
        </button>
</form>
